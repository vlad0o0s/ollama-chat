# JWT Secret Key (ОБЯЗАТЕЛЬНО измените на сложный случайный ключ!)
JWT_SECRET=your-secret-key-change-in-production

# Database Configuration
# Использовать MySQL вместо SQLite
DB_USE_MYSQL=true

# MySQL Settings
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-password
DB_NAME=ollama_chat

# SQLite (используется если DB_USE_MYSQL=false)
DATABASE_URL=sqlite:///./data/ollama_chat.db

# Server
PORT=5000
HOST=0.0.0.0

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Tavily Search API
TAVILY_API_KEY=your-tavily-api-key-here
TAVILY_SEARCH_DEPTH=basic
TAVILY_MAX_RESULTS=5
TAVILY_SEARCH_TIMEOUT=10

# Ollama Configuration
OLLAMA_URL=http://192.168.10.12:11434
OLLAMA_DEFAULT_MODEL=gpt-oss:20b
